<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
    <parameter key="kopjra_guzzle.log_subscriber">Kopjra\GuzzleBundle\EventListener\LogSubscriber</parameter>
  </parameters>

  <services>
    <service id="guzzle" class="GuzzleHttp\Client">
      <argument/>
    </service>
    <service id="kopjra.guzzle_bundle.twig.guzzle_extension" class="Kopjra\GuzzleBundle\Twig\GuzzleExtension" public="false">
      <tag name="twig.extension"/>
      <argument type="service" id="guzzle"/>
    </service>
    <service id="kopjra.guzzle_bundle.event_listener.emitter" class="Kopjra\GuzzleBundle\EventListener\Emitter" public="false"/>
    <service id="kopjra.guzzle_bundle.event_listener.log_subscriber" class="%kopjra_guzzle.log_subscriber%" public="false">
      <argument type="service" id="logger"/>
      <tag name="guzzle.event_subscriber"/>
    </service>
    <service id="guzzle_oauth" class="Kopjra\GuzzleBundle\OAuth\OAuthSubscriber"/>
    <service id="guzzle_cache" class="Kopjra\GuzzleBundle\Cache\CacheSubscriber"/>
    <service id="guzzle_retry" class="Kopjra\GuzzleBundle\Retry\RetrySubscriber"/>
    <service id="guzzle_services" class="Kopjra\GuzzleBundle\Services\Services"/>
  </services>
</container>
